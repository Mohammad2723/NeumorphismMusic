<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeumorphismMusic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>
    
    
    
    
    <style name="square_btn">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">6dp</item>
    </style>

    <style name="cover_image">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">130dp</item>
    </style>
    <style name="play">
        <item name="neumorph_shapeType">pressed</item>
    </style>
    <style name="pause">
        <item name="neumorph_shapeType">basin</item>
    </style>
    
</resources>